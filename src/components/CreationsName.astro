---
interface Props {
  title: string;
}

const { title } = Astro.props;

const newItem = title.split(" ");
let firstItem = "";
let secondItem = "";

if (newItem.length == 2) {
  firstItem = newItem.slice(0, 1).join(" ");
  secondItem = newItem.slice(1).join("");
}

if (newItem.length == 3) {
  firstItem = newItem.slice(0, 1).join(" ");
  secondItem = newItem.slice(1, 3).join(" ");
}

if (newItem.length == 4) {
  firstItem = newItem.slice(0, 2).join(" ");
  secondItem = newItem.slice(2, 4).join(" ");
}
---

<p class="font-heading uppercase text-3xl font-light z-20">
  {firstItem}
  <br />
  {secondItem}
</p>
